def mostra_valores(preco, desconto):

    print(round(preco * (1.0 - desconto/100), 2))
    print(round(preco * desconto/100, 2))

# chocolate
preco    = input('escreva o valor do preço, seguido de enter/return ')
# o desconto está em percentagem
desconto = input('escreva o valor do desconte, em percentagem, seguido de enter/return ')
mostra_valores(preco, desconto)

# água
preco    = input('escreva o valor do preço, seguido de enter/return ')
# o desconto está em percentagem
desconto = input('escreva o valor do desconte, em percentagem, seguido de enter/return ')
mostra_valores(preco, desconto)



- concatenação erro

---------- desconto_v12.py

# dados um preço, e um desconto em pecentagem, este programa calcula o
# valor a pagar e o valor do desconto

def mostra_valores(preco, desconto):

    valor_a_pagar     = round(preco * (1.0 - desconto/100), 2)
    valor_do_desconto = round(preco * desconto/100, 2)

    print()

    print('o valor a pagar é' + valor_a_pagar)
    print('o valor do desconto é ' + valor_do_desconto)

# chocolate
preco    = input('escreva o valor do preço, seguido de enter/return ')
# o desconto está em percentagem
desconto = input('escreva o valor do desconte, em percentagem, seguido de enter/return ')
mostra_valores(preco, desconto)

# água
preco    = input('escreva o valor do preço, seguido de enter/return ')
# o desconto está em percentagem
desconto = input('escreva o valor do desconte, em percentagem, seguido de enter/return ')
mostra_valores(preco, desconto)



- função str

---------- desconto_v13.py

# dados um preço, e um desconto em pecentagem, este programa calcula o
# valor a pagar e o valor do desconto

def mostra_valores(preco, desconto):

    valor_a_pagar     = round(preco * (1.0 - desconto/100), 2)
    valor_do_desconto = round(preco * desconto/100, 2)

    print()

    print('o valor a pagar é' + str(valor_a_pagar))
    print('o valor do desconto é ' + str(valor_do_desconto))

# chocolate
preco    = input('escreva o valor do preço, seguido de enter/return ')
# o desconto está em percentagem
desconto = input('escreva o valor do desconte, em percentagem, seguido de enter/return ')
mostra_valores(preco, desconto)

# água
preco    = input('escreva o valor do preço, seguido de enter/return ')
# o desconto está em percentagem
desconto = input('escreva o valor do desconte, em percentagem, seguido de enter/return ')
mostra_valores(preco, desconto)




